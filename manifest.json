{
    "name": "Open My Tabs",
    "version": "1.0",
    "description": "Opens pre-defined Google Chrome tabs automatically",
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
          "16": "images/automation_16.png",
          "24": "images/automation_24.png",
          "32": "images/automation_32.png",
          "128": "images/automation_128.png"
        },
        "default_title": "Open My Tabs",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/automation_16.png",
        "24": "images/automation_24.png",
        "32": "images/automation_32.png",
        "128": "images/automation_128.png"
    },
     "manifest_version": 2
  }